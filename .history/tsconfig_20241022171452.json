{
    "compilerOptions": {
      "target": "ES2020", // or your preferred version
      "module": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src", // assuming your source files are in src directory
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
  }